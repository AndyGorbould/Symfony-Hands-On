{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
<div>
    {# How data is conditionally rendered should be done inside the template #}
    {% if posts|length > 0 %}
        {% for post in posts %}
        <div>
            <a href='{{ path('app_micro_post_show', { post: post.id }) }}'>{{ post.title }}</a>
            {# ðŸ‘† generate URL for each using the key value & the twig 'path' function #}
        </div>
        {% endfor %}
    {% else %}
        No messages...
    {% endif %}
</div>
{% endblock %}
