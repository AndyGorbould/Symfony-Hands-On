{% extends 'base.html.twig' %}

{% block body %}
{# ðŸ‘† this now only renders inside of the body, everything else is extended from the base #}
<div>
    {# How data is conditionally rendered should be done inside the template #}
    {% if messages|length > 0 %}
        {% for message in messages|slice(0, limit) %}
            <div>{{ message.message }}</div>
            {{ include('hello/_message.html.twig', {message: message}) }}
            {# ðŸ‘† the partial to include needs to be declared, the data being sent to the partial can also be declared here. Data is inherited by partials from parents but declaring it can change the names if necessary #}
        {% endfor %}
    {% else %}
        No messages...
    {% endif %}
</div>
{% endblock %}